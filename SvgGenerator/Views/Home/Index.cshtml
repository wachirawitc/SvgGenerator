@{
    ViewData["Title"] = "Home Page";
}

<svg id="svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 99 56">
    <title>Images</title>

</svg>

@section scripts{

    <script type="text/javascript">

        var maximumColumns = 19;
        var maximumRows = 13;
        var distanceBox = 3.05;

        var wallColor = "#424242";
        var walkColor = "#DCEDC8";

        var walls = [
            { "X": 1, "Y": 0 }, { "X": 1, "Y": 1 }, { "X": 1, "Y": 2 }, { "X": 1, "Y": 3 }, { "X": 1, "Y": 4 }, { "X": 1, "Y": 5 },
            { "X": 3, "Y": 0 }, { "X": 3, "Y": 1 }, { "X": 3, "Y": 2 }, { "X": 3, "Y": 3 }, { "X": 3, "Y": 4 }, { "X": 3, "Y": 5 },
            { "X": 6, "Y": 0 }, { "X": 6, "Y": 1 }, { "X": 6, "Y": 2 }, { "X": 6, "Y": 3 }, { "X": 6, "Y": 4 }, { "X": 6, "Y": 5 },
            { "X": 7, "Y": 0 }, { "X": 7, "Y": 1 }, { "X": 7, "Y": 2 }, { "X": 7, "Y": 3 }, { "X": 7, "Y": 4 }, { "X": 7, "Y": 5 },
            { "X": 9, "Y": 0 }, { "X": 9, "Y": 1 }, { "X": 9, "Y": 2 }, { "X": 9, "Y": 3 }, { "X": 9, "Y": 4 }, { "X": 9, "Y": 5 },
            { "X": 10, "Y": 0 }, { "X": 10, "Y": 1 }, { "X": 10, "Y": 2 }, { "X": 10, "Y": 3 }, { "X": 10, "Y": 4 }, { "X": 10, "Y": 5 },
            { "X": 11, "Y": 0 }, { "X": 11, "Y": 1 }, { "X": 11, "Y": 2 }, { "X": 11, "Y": 3 }, { "X": 11, "Y": 4 }, { "X": 11, "Y": 5 },
            { "X": 1, "Y": 7 }, { "X": 1, "Y": 8 }, { "X": 2, "Y": 7 }, { "X": 2, "Y": 8 }, { "X": 3, "Y": 7 }, { "X": 3, "Y": 8 },
            { "X": 3, "Y": 10 }, { "X": 4, "Y": 10 }, { "X": 3, "Y": 11 }, { "X": 4, "Y": 11 }, { "X": 3, "Y": 12 }, { "X": 4, "Y": 12 },
            { "X": 3, "Y": 14 }, { "X": 3, "Y": 15 }, { "X": 3, "Y": 16 }, { "X": 3, "Y": 17 }, { "X": 3, "Y": 18 },
            { "X": 4, "Y": 14 }, { "X": 4, "Y": 15 }, { "X": 4, "Y": 16 }, { "X": 4, "Y": 17 }, { "X": 4, "Y": 18 },
            { "X": 1, "Y": 10 }, { "X": 1, "Y": 11 }, { "X": 1, "Y": 12 }, { "X": 1, "Y": 13 }, { "X": 1, "Y": 14 }, { "X": 1, "Y": 15 }, { "X": 1, "Y": 17 }, { "X": 1, "Y": 18 },
        ];

        var paper = Snap("#svg");

        for (var column = 0; column < maximumColumns; column++) {
            var rectX = column * distanceBox;

            for (var row = 0; row < maximumRows; row++) {
                var rectY = row * distanceBox;

                var color = walkColor;
                if (IsWall(row, column)) {
                    color = wallColor;
                }

                var rectRow = paper.rect(rectX, rectY, 3, 3)
                    .attr("id", "R" + row + "C" + column)
                    .attr("fill", color)
                    .attr("data-row", row)
                    .attr("data-column", column);
            }
        }

        function IsWall(row, column) {
            var result = false;
            $.each(walls, function (index, entry) {
                if (entry.X == row && entry.Y == column) {
                    result = true;
                    return true;
                }
            });
            return result;
        }

    </script>

}